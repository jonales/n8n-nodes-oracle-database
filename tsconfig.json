{
  "compilerOptions": {
    "types": ["node"],
    "module": "commonjs",
    "target": "es2019",
    "lib": ["es2017", "es2019"],
    "strict": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "credentials/**/*",
    "nodes/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "dist/**/*",
    "test/**/*"
  ]
}