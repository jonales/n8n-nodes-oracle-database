{
  "compilerOptions": {
    "lib": [
      "es2021",
      "dom"
    ],
    "types": [
      "node"
    ],
    "module": "commonjs",
    "target": "es2021",
    "rootDir": "./",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "skipLibCheck": true
  },
  "include": [
    "credentials/**/*",
    "nodes/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}